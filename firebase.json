{
  "hosting": {
    "public": "deploy",
    "ignore": [
      "**/.*",
      "packages/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "predeploy": [
      "pub run build_runner build -o web:deploy --fail-on-severe --release"
    ]
  }
}
